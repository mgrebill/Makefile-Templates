#Makefile template for C static libraries projects.
#Copy-Paste from line 6 to EOF.
#If your library needs another library to compile, see the Static-Library-Dep-Makefile.


# Name
NAME =			#Replace this comment with the name of your project.

LIB =			$(addsuffix .a, $(NAME))


# Compiler
CC = 			gcc

CFLAGS =		-Wall
CFLAGS +=		-Wextra
CFLAGS +=		-Werror

MFLAGS =		-MMD
MFLAGS +=		-MF


# Archiver
AR =			ar

AFLAGS =		-r
AFLAGS +=		-c


# Header
HEADERSFILES =	$(addsuffix .h, $(NAME))

HEADERSDIR =	includes

HEADERSPATH =	$(addprefix ./, $(HEADERSDIR))

HEADERS =		$(addprefix $(HEADERSPATH)/, $(HEADERSFILES))


# Sources
SRCSFILES =		#Replace this comment with your .c sources.

SRCSDIR =		src

SRCSPATH =		$(addprefix ./, $(SRCSDIR))

SRCS =			$(addprefix $(SRCSPATH)/, $(SRCSFILES))


# Objects
OBJSFILES =		$(SRCSFILES:.c=.o)

OBJSDIR =		obj

OBJSPATH =		$(addprefix ./, $(OBJSDIR))

OBJS =			$(addprefix $(OBJSPATH)/, $(OBJSFILES))


# Dependencies
DEPSFILES =		$(OBJSFILES:.o=.d)

DEPSDIR =		dep

DEPSPATH =		$(addprefix ./, $(DEPSDIR))

DEPS =			$(addprefix $(DEPSPATH)/, $(DEPSFILES))


# Rules
all: $(LIB)

$(LIB): $(OBJSPATH) $(DEPSPATH) $(OBJS)
	$(AR) $(AFLAGS) $@ $^

$(OBJSPATH) $(DEPSPATH):
	mkdir $@

$(OBJS): $(SRCS)
	$(CC) $(CFLAGS) $(MFLAGS) $(addprefix $(DEPSPATH)/, $(notdir $(@:.o=.d))) -I $(HEADERSPATH) -o $@ -c $<

-include $(DEPS)

clean:
	rm -rf $(OBJSPATH)

cleandep:
	rm -rf $(DEPSPATH)

fclean: clean cleandep
	rm -f $(LIB)

re: fclean all

headers:
	@ls $(HEADERSPATH)

sources:
	@ls $(SRCSPATH)

dependencies:
	@cat $(DEPS)

.PHONY: all clean cleandep fclean re headers sources dependencies
