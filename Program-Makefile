#Makefile template for C programs projects.
#Copy-Paste from line 6 to EOF.
#If your program needs libraries to compile, see the Program-Dep-Makefile.


# Name
NAME =			#Replace this comment with the name of your project.


# Compiler
CC = 			gcc

CFLAGS =		-Wall
CFLAGS +=		-Wextra
CFLAGS +=		-Werror

CMFLAGS =		-MMD
CMFLAGS +=		-MF


# Header
HEADERSFILES =	$(addsuffix .h, $(NAME))

HEADERSDIR =	includes

HEADERSPATH =	$(addprefix ./, $(HEADERSDIR))

HEADERS =		$(addprefix $(HEADERSPATH)/, $(HEADERSFILES))


# Sources
SRCSFILES =		#Replace this comment with your .c sources.

SRCSDIR =		src

SRCSPATH =		$(addprefix ./, $(SRCSDIR))

SRCS =			$(addprefix $(SRCSPATH)/, $(SRCSFILES))


# Objects
OBJSFILES =		$(SRCSFILES:.c=.o)

OBJSDIR =		obj

OBJSPATH =		$(addprefix ./, $(OBJSDIR))

OBJS =			$(addprefix $(OBJSPATH)/, $(OBJSFILES))


# Dependencies
DEPSFILES =		$(OBJSFILES:.o=.d)

DEPSDIR =		dep

DEPSPATH =		$(addprefix ./, $(DEPSDIR))

DEPS =			$(addprefix $(DEPSPATH)/, $(DEPSFILES))


# Rules
all: $(NAME)

$(NAME): $(OBJSPATH) $(DEPSPATH) $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

$(OBJSPATH) $(DEPSPATH):
	mkdir $@

$(OBJS): $(SRCS)
	$(CC) $(CFLAGS) $(CMFLAGS) $(addprefix $(DEPSPATH)/, $(notdir $(@:.o=.d))) -I $(HEADERSPATH) -o $@ -c $<

-include $(DEPS)

clean:
	rm -rf $(OBJSPATH)

cleandep:
	rm -rf $(DEPSPATH)

fclean: clean cleandep
	rm -f $(NAME)

re: fclean all

headers:
	@ls $(HEADERSPATH)

sources:
	@ls $(SRCSPATH)

dependencies:
	@cat $(DEPS)

.PHONY: all clean cleandep fclean re headers sources dependencies
